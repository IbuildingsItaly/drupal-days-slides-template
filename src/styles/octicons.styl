@font-face
  font-family 'octicons'
  src url(../webfonts/octicons.eot)
  src url(../webfonts/octicons.eot#iefix) format('embedded-opentype'), url(../webfonts/octicons.woff) format('woff'), url(../webfonts/octicons.ttf) format('truetype'), url(../webfonts/octicons.svg#octicons) format('svg')
  font-weight normal
  font-style normal

base-icon(size)
  font-family 'octicons'
  font-weight normal
  font-style normal
  display inline-block
  text-decoration none
  line-height 1
  -webkit-font-smoothing antialiased
  font-size size
  width size
  height size

.mega-icon
  base-icon(32px)

.big-icon
  base-icon(24px)

.small-icon
  base-icon(16px)

.octicon-demo:before
  content "\f033"

.octicon-fork:before
  content "\f020"

.octicon-mail:before
  content "\f03b"

.octicon-github:before
  content "\f00a"

.octicon-twitter:before
  content "\f0ae"